  <div class="card--image" style="max-width: 400px; overflow: hidden;">
    <%= image %>
  </div>
  <% end %>
  <h4 class="font-bold text-xl mb-2"><%= @title %></h4>
  <p class="text-gray-400 text-base"><%= @description %></p>
</div>